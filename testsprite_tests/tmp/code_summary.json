        "paths": {
          "/api/tasks": {
            "get": {
              "summary": "Get user tasks",
              "security": [{"bearerAuth": []}],
              "parameters": [
                {
                  "name": "status",
                  "in": "query",
                  "schema": {"type": "string"},
                  "description": "Filter by task status"
